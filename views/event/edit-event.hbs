<main class="container">

{{!-- //Tiene que recibir el objeto Sarao     --}}
<form action="/event/edit/{{event.id}}" method="post">

        <div class="form-group">
          <label for="name-event-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-event-input" value="{{event.name}}">
        </div>

        <div class="form-group">
          <label for="owner-event-input">Creado por {{event.owner.username}} </label>
          <label for="sarao-event-input">en {{event.sarao.name}} </label>
        </div>

        <div class="form-group">
          <label for="description-event-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-event-input" value="{{event.name}}">
        </div>
        <div class="form-group">
          <label for="image-event-input">Imagen</label>
          <input name="image" type="text" class="form-control" id="image-event-input" value="{{event.image}}">
        </div>

        <div class="form-group">
          <label for="startDate-event-input">Fecha y hora</label>
          <input name="startDate" type="datetime-local" class="form-control" id="startDate-event-input" min="{{activeSarao.startDate}}" max="{{activeSarao.endDate}}" value="{{event.startDate}}">
        </div>

        <div class="form-group">
          <label for="duration-event-input">Duración</label>
          <input name="duration" type="number" class="form-control" id="duration-event-input" value={{event.duration}}>
        </div>

        <div class="form-group">
          <label for="location-event-input">Ubicación</label>
          <input name="location" type="text" class="form-control" id="location-event-input" value="{{event.location}}">
        </div>

        <div class="form-group">
          <label for="karmaPlus-event-input">Karma +</label>
          <input name="karmaPlus" type="number" class="form-control" id="karmaPlus-event-input" min=0 value={{event.karmaPlus}}>
        </div>
        <div class="form-group">
          <label for="karmaMinus-event-input">Karma -</label>
          <input name="karmaMinus" type="number" class="form-control" id="karmaMinus-event-input" max="0" value={{event.karmaMinus}}>
        </div>

       <div class="form-group">
          <label for="character-plus-picker">Currantes</label>     
        <div class="character-picker character-plus-picker">
            {{#each activeSarao.userList}}
              {{>facecard}}
            {{/each}}
        </div>
        </div>

        <div class="form-group">
        <label for="character-plus-picker">Disfrutones</label> 
        <div class="character-picker character-minus-picker">
            {{#each activeSarao.userList}}
              {{>facecard}}
            {{/each}}
        </div>
        </div>
              <div class="hidden">
                <div class="form-group character-plus-form">
                  <label for="userPlus-list">Currantes</label>
                  <select name="userPlus" class="form-control" id="userPlus-list" multiple >
                    <option>Seleccionar</option>
                    {{#each activeSarao.userList}}
                      <option value="{{_id}}">{{username}}</option>
                    {{/each}}
                  </select>
                </div>
                
                <div class="form-group character-minus-form">
                  <label for="userMinus-list">Disfrutones</label>
                  <select name="userMinus" class="form-control character-minus-form" id="userMinus-list" multiple>
                    <option>Seleccionar</option>
                    {{#each activeSarao.userList}}
                      <option value="{{_id}}">{{username}}</option>
                    {{/each}}
                  </select>
                </div>

                <ul class="character-plus-list">
                  {{#each event.userPlus}}
                    <li>{{id}}</li>
                  {{/each}}
                </ul>

                <ul class="character-minus-list">
                  {{#each event.userMinus}}
                    <li>{{id}}</li>
                  {{/each}}
                </ul>
              </div>

          <div class="general-bouttons">
              <button type="submit">Editar Evento</button>
              <a href="/">Volver</a>
          </div>
      </form>



</main>
<script src="/javascripts/facepicker.js"></script>
<script src="/javascripts/edit.event.picker.js"></script>