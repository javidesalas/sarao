<div class="container">
    <div class="row justify-content-center">
        <div class="event-card">
            <img src="{{event.image}}" alt="{{event.name}}">
            <hr>

            <div class="event-details">
            <h4>{{event.name}}</h4>
            <p><span>{{event.location}}. &nbsp - &nbsp</span><span>{{event.dateString}} {{event.timeString}}
                    ({{event.duration}}min.)</span></p>
            <p>{{event.description}}</p>
            <p>Creado por {{event.owner.username}} en {{event.sarao.name}}</p>
            </div>

            
            <div class="karmaPlus">
                <h6>Karma +: {{event.karmaPlus}}</h6>
                <h6>Currantes</h6>
                <ul class="character-picker character-plus-picker">
                    {{#each event.userPlus}}
                         {{> facecard}}
                    {{/each}}
                </ul>
                <p><a href="/event/countme/addplus?eventId={{event.id}}"><i class="fas fa-plus-circle"></i></a><a
                        href="/event/countme/retireplus?eventId={{event.id}}"><i class="fas fa-minus-circle"></i></a></p>
            </div>
            <div class="karmaMinus">
                <h6>Karma -: {{event.karmaMinus}}</h6>
                <h6>Disfrutones: </h6>
                <ul class="character-picker character-minus-picker">
                    {{#each event.userMinus}}
                        {{> facecard}}
                    {{/each}}
                </ul>
                <p> <a href="/event/countme/addminus?eventId={{event.id}}"><i class="fas fa-plus-circle"></i></a><a
                        href="/event/countme/retireminus?eventId={{event.id}}"><i class="fas fa-minus-circle"></i></a></p>
            </div>
            <div class="general-bouttons">
                {{#if canEdit}}
                <a href="/event/edit/{{event.id}}">Editar evento</a>
                <a href="/event/delete/{{event.id}}">Eliminar evento</a>
                <form action="/event/close/{{event.id}}" method="post">
                    <button type="submit">Cerrar Evento</button>
                </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>
               
