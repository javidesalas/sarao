<div class="event-card">
<img src="{{event.image}}" alt="{{event.name}}">
<hr>
<h4>{{event.name}}</h4>
<p><span>{{event.location}}. </span><span>{{event.dateString}} {{event.timeString}} ({{event.duration}}min.)</span></p>
<p>{{event.description}}</p>
<p>Creado por {{event.owner.username}} en {{event.sarao.name}}</p>
<p>Karma +: {{event.karmaPlus}}</p> {{!--Aquí el botón de Ajax para req.user apuntarse/quitarse del evento  --}}
<h6>Currantes</h6>
<ul>
    {{#each event.userPlus}}
    {{> facecard}}
        {{!-- <li>
            <img src="{{image}}" alt="{{username}}">
            <p>{{username}}</p>
        </li> --}}
    {{/each}}
</ul>
<p>Karma -: {{event.karmaMinus}}</p>{{!--Aquí el botón de Ajax para req.user apuntarse/quitarse del evento  --}}
<h6>Disfrutones</h6>
<ul>
    {{#each event.userPlus}}
        {{!-- <li>
            <img src="{{image}}" alt="{{username}}">
             <p>{{username}}</p>
        </li> --}}
    {{/each}}
</ul>

{{#if canEdit}}
<a href="/event/edit/{{event.id}}">Editar evento</a>
<a href="/event/delete/{{event.id}}">Eliminar evento</a>
<form action="/event/close/{{event.id}}" method="post">
    <button type="submit">Cerrar Evento</button>
</form>

{{/if}}

</div>
