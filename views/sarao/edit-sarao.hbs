<main class="container">

{{!-- //Tiene que recibir el objeto Sarao     --}}
<form action="/sarao/edit/{{sarao.id}}" method="post">

        <div class="form-group">
          <label for="name-sarao-input">Nombre</label>
          <input name="name" value="{{sarao.name}}" type="text" class="form-control" id="name-sarao-input">
        </div>
        
        <div class="form-group">
          <label for="image-sarao-input">Imagen</label>
          <input name="image" value="{{sarao.image}}" type="text" class="form-control" id="name-sarao-input">
        </div>

        <div class="form-group">
          <label for="startDate-sarao-input">Empieza</label>
          <input name="startDate" value="{{sarao.startDate}}" type="date" class="form-control" id="startDate-sarao-input">
        </div>

        <div class="form-group">
          <label for="endDate-sarao-input" value="endDate">Termina</label>
          <input name="endDate" value="{{sarao.endDate}}" type="date" class="form-control" id="endDate-sarao-input">
        </div>

        <div class="form-group">
          <label for="location-sarao-input">Ubicaci√≥n</label>
          <input name="location" value="{{sarao.location}}"type="text" class="form-control" id="location-sarao-input">
        </div>     

        <div class="list-group">
            <label for="userList">Usuarios</label>
            <select id="userList" name="userList" multiple>
                <option value="{{actUser.id}}">{{actUser.username}}</option>
               {{#each user.friends}}
                <option value="{{id}}">{{username}}</option>
               {{/each}}
            </select> 
        </div>

        <div class="form-group">
          <label for="prize-sarao-input">Premio</label>
          <input name="prize" value="{{sarao.prize}}" type="text" class="form-control" id="prize-sarao-input">
        </div>

         <div class="form-group">
          <label for="punishment-sarao-input">Castigo</label>
          <input name="punishment" value="{{sarao.punishment}}" type="text" class="form-control" id="punishment-sarao-input">
        </div>

        <div class="general-bouttons">
          <button type="submit">Editar Sarao</button>
          <a href="/">Volver</a>
        </div>

</form>
</main>